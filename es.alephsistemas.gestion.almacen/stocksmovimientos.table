<?xml version="1.0" encoding="UTF-8"?>
<table xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <!-- Nombre de la tabla -->
    <name>stocksmovimientos</name>
    <!-- Alias a presentar en la aplicación -->
    <alias>Movimientos de stocks</alias>
    <pixmap>:/images/commons/stocksmovimientos.png</pixmap>

    <menuEntryPath>Almacén</menuEntryPath>
    <moduleToolBarEntryPath>Almacén</moduleToolBarEntryPath>
    
    <canHaveRelatedElements>true</canHaveRelatedElements>
    
   <toStringExpression>
        <expression>Movimiento de almacén de tipo: {tipo}, con fecha {fecha}, almacén origen {ubicacionorigen.father.nombre} y almacén destino {ubicaciondestino.father.nombre}</expression>
    </toStringExpression>
    
    <field>
        <name>id</name>
        <alias>Identificador</alias>
        <null>false</null>
        <pk>true</pk>
        <type>serial</type>
        <visiblegrid>false</visiblegrid>
        <relation>
            <name>stocksmovimientosinstancias</name>
            <table>stocksmovimientosinstancias</table>
            <field>idmovimiento</field>
            <card>1M</card>
            <delC>true</delC>
        </relation>
        
    </field>
   
    <field>
        <name>idubicacionorigen</name>
        <alias>Id. Ubicación Origen</alias>
        <null>true</null>
        <pk>false</pk>
        <type>int</type>
        <visiblegrid>false</visiblegrid>

        <relation>
            <name>ubicacionorigen</name>
            <table>almacenesubicaciones</table>
            <field>id</field>
            <card>M1</card>
        </relation>
    </field>

   <field>
        <name>ubicacionorigen</name>
        <alias>Almacén Origen</alias>
        <expression>ubicacionorigen.father.nombre</expression>
    </field>
    
    <field>
        <name>idubicaciondestino</name>
        <alias>Id. Ubicación Destino</alias>
        <null>true</null>
        <pk>false</pk>
        <type>int</type>
        <visiblegrid>false</visiblegrid>

        <relation>
            <name>ubicaciondestino</name>
            <table>almacenesubicaciones</table>
            <field>id</field>
            <card>M1</card>
        </relation>
    </field>

   <field>
        <name>ubicaciondestino</name>
        <alias>Almacén Destino</alias>
        <expression>ubicaciondestino.father.nombre</expression>
    </field>
    
    <field>
        <name>tipo</name>
        <alias>Tipo de movimiento</alias>
        <null>false</null>
        <pk>false</pk>
        <type>string</type>
        <length>20</length>
        <optionList>Entrada,Salida,Regularización,Transferencia</optionList>
        <default>Entrada</default>
        <visiblegrid>true</visiblegrid>        
    </field>
    
    <field>
        <name>fecha</name>
        <alias>Fecha</alias>
        <null>false</null>
        <pk>false</pk>
        <type>datetime</type>
        <default>now</default>
        <visiblegrid>true</visiblegrid>        
    </field>
    
    <field>
        <name>descripcion</name>
        <alias>Descripcion</alias>
        <null>false</null>
        <pk>false</pk>
        <type>string</type>
        <length>250</length>
        <visiblegrid>true</visiblegrid>        
    </field>
    
</table>
