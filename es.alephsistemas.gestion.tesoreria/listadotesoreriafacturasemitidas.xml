 <querysource>
  <name>qryMain</name>
  <sql>SELECT fp.codfactura, fp.nombre,
fp.cifnif, fp.fecha, fp.neto, fp.totaliva, fp.total,
cobro.estado, cobro.importecobrado
FROM facturascli as fp LEFT JOIN
alepherp_relations as rel ON fp.oid = rel.masteroid,
efectoscobro as cobro, empresas as emp
WHERE emp.id = fp.idempresa and
cobro.oid = rel.relatedoid AND 
fp.fecha between &lt;? value("P_FECHA_INICIO") ?> AND &lt;? value("P_FECHA_FIN") ?> and emp.id = &lt;? value("P_ID_EMPRESA") ?>
ORDER BY fecha, codfactura</sql>
 </querysource>
 <querysource>
  <name>qryEmpresa</name>
  <sql>select emp.nombre, emp.logo
from empresas 
where id=&lt;? value("P_ID_EMPRESA") ?></sql>
